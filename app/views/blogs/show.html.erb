<div id="post_show_content" class="skinny_wrapper wrapper_padding">
			<header>
				<p class="date">
					<%= @blog.created_at.strftime('%A, %b %d') %>th
				</p>
				<h1><%= @blog.title %><br></h1>
				<hr>
			</header>
			<div id="content">
		<%= @blog.content %>
		</div>
		<hr>
		<div id="share_box">
			<p>Share Hello World!</p>
			<!-- Twitter -->
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @blog.title %> by @istereotype - &amp;url=<%= url_for([@blog, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@blog, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <!-- Google Plus -->
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@blog, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
		</div>
		<hr>
		</div>